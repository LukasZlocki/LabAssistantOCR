<Window x:Class="LabAssistantOCR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabAssistantOCR"
        mc:Ignorable="d"
        Title="LabAssistants" Height="700" Width="500">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="2" AllowDrop="True" Background="Gray" Drop="FileDropStackPanel_Drop">
            <Label Content="... Drop image here ! ..."  />
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <TextBlock x:Name="txtScreen" Background="Black" Foreground="White" FontStyle="Normal" FontSize="18" TextWrapping="Wrap" >
                -- Data will be present here --
            </TextBlock>
        </ScrollViewer>
    </Grid>

</Window>
